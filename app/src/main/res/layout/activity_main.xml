<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">


    <TextView
        android:id="@+id/tvParcial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Parcial #1"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/moradoOscuro"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvEstudiantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eduardo Maestre\nDavid Zhang"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvParcial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvLabelNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese la nota a validar:"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstudiantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/etNota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="0 - 100"
        android:maxLength="3"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/moradoOscuro"
        app:layout_constraintTop_toBottomOf="@id/tvLabelNota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btnValidar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALIDAR"
        android:textStyle="bold"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etNota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
